<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ProblemActivity">



    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/equal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/equal"
                android:src="@drawable/equal" />

            <ImageButton
                android:id="@+id/plus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/plus"
                android:src="@drawable/plus" />

            <ImageButton
                android:id="@+id/minus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/minus"
                android:src="@drawable/minus" />

            <ImageButton
                android:id="@+id/multiply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/multiply"
                android:src="@drawable/multiply" />

            <ImageButton
                android:id="@+id/divide_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/divide"
                android:src="@drawable/divide" />

            <ImageButton
                android:id="@+id/negation_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/negation"
                android:src="@drawable/minus" />

            <ImageButton
                android:id="@+id/square_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/square"
                android:src="@drawable/power2" />

            <ImageButton
                android:id="@+id/sqrt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/sqrt"
                android:src="@drawable/root2" />

            <ImageButton
                android:id="@+id/cube_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/cube"
                android:src="@drawable/power3" />

            <ImageButton
                android:id="@+id/cbrt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/cbrt"
                android:src="@drawable/root3" />

            <ImageButton
                android:id="@+id/colon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:contentDescription="@string/colon"
                android:background="@android:color/transparent"
                android:src="@drawable/colon" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:layout_above="@id/horizontal_scroll_view"
        android:contentDescription="@string/delete"
        android:src="@drawable/delete" />

    <ImageButton
        android:id="@id/disassemble_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:layout_above="@id/horizontal_scroll_view"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/disassemble"
        android:src="@drawable/disas" />

    <TextView
        android:id="@+id/problem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/problem"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/problem_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/result"
        android:textSize="24sp" />

</RelativeLayout>
