<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ProblemActivity">


<FrameLayout
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E0E0E0"
    android:padding="16dp"
    android:layout_gravity="bottom"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/equal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/equal" />

            <ImageView
                android:id="@+id/plus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus" />

            <ImageView
                android:id="@+id/minus_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/minus" />

            <ImageView
                android:id="@+id/multiply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/multiply" />

            <ImageView
                android:id="@+id/divide_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divide" />

            <ImageView
                android:id="@+id/square_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/power2" />

            <ImageView
                android:id="@+id/root2_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/root2" />

            <ImageView
                android:id="@+id/cube_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/power3" />

            <ImageView
                android:id="@+id/cbrt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/root3" />

            <ImageView
                android:id="@+id/colon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/colon" />



        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
</FrameLayout>
    </RelativeLayout>
